{
    "version": 2,
    "public": true,
    "builds": [
      {
        "src": "api/main.py",
        "use": "@vercel/python"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/next"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/main.py"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend/$1"
      }
    ],
    "installCommand": "npm install --prefix frontend && uv pip install -r api/requirements.txt",
    "buildCommand": "npm run build --prefix frontend"
  }